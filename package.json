{
  "name": "idp-octelium-sync",
  "version": "1.0.0",
  "description": "Sync users and groups from Identity Providers (Keycloak, Okta, Azure AD) to Octelium",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "idp-octelium-sync": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile=idp-octelium-sync",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check src/",
    "format": "bunx @biomejs/biome format --write src/"
  },
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^26.5.2",
    "commander": "^12.1.0",
    "yaml": "^2.8.2",
    "minimatch": "^10.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "keycloak",
    "octelium",
    "idp",
    "identity-provider",
    "sync",
    "gitops"
  ],
  "author": "NeuroPlume",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neuroplume/idp-octelium-sync"
  }
}
